mixin modal-registration(data)
  .modal.modal-registration#modal-registration
    .modal__close
    .modal__title Регистрация

    form().modal-form
      .modal-form__row
        .modal-form__column._left
          .modal-form__label Тип аккаунта *
        .modal-form__column._right._radio
          label
            input(type="radio" value="" name="typeAcc")
            span Физическое лицо
          label
            input(type="radio" value="" name="typeAcc")
            span Юридическое лицо (в том числе ИП)

      .modal-form__row
        .modal-form__column._left
          .modal-form__label Ваша Фамилия *
        .modal-form__column._right
          input(type="text" value="").form-field

      .modal-form__row._bordered
        .modal-form__column._left
          .modal-form__label Ваше Имя *
        .modal-form__column._right
          input(type="text" value="").form-field

      .modal-form__row
        .modal-form__column._left
          .modal-form__label Ваш Email *
        .modal-form__column._right
          input(type="email" value="").form-field

      .modal-form__row._bordered
        .modal-form__column._left
          .modal-form__label Повторите Ваш Email *
        .modal-form__column._right
          input(type="email" value="").form-field

      .modal-form__row
        .modal-form__column._left
          .modal-form__label Желаемый Пароль *
        .modal-form__column._right
          input(type="password" value="").form-field

      .modal-form__row._bordered
        .modal-form__column._left
          .modal-form__label Повторите Пароль *
        .modal-form__column._right
          input(type="password" value="").form-field

      .modal-form__row
        .modal-form__column._left
          .modal-form__label Сколько будет *
        .modal-form__column._right._captcha
          img(src="%=static=%images/content/temp-captcha.png" alt="")
          input(type="password" value="").form-field


      input(type="submit" value="Отправить заявку").modal-form__submit

mixin modal-enter(data)
  .modal.modal-enter#modal-enter
    .modal__close
    .modal__title Вход

    form().modal-form
      .modal-form__field._login
        input(type="text" value="").form-field
      .modal-form__field._password
        input(type="password" value="").form-field
      input(type="submit" value="Войти").modal-form__submit._enter

    a(href="javascript: void(0);" title="" data-modal="#modal-restore"
      onclick="show_modal('user', 'registration', 'statistics');").modal__lost Забыли пароль?

mixin modal-lost(data)
  .modal.modal-restore#modal-restore
    .modal__close
    .modal__title Восстановление пароля

    form().modal-form
      .modal-form__field._lost
        input(type="text" value="" placeholder="Введите вашу почту").form-field

    input(type="submit" value="Восстановить").modal-form__submit._enter
